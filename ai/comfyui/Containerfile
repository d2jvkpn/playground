#FROM nvidia/cuda:12.9.1-cudnn-devel-ubuntu24.04
FROM nvidia/cuda:12.9.1-cudnn-runtime-ubuntu24.04

# 1. Accept proxy settings as build arguments
ARG HTTP_PROXY
ARG HTTPS_PROXY
ARG NO_PROXY

ENV http_proxy=$HTTP_PROXY \
  https_proxy=$HTTPS_PROXY \
  no_proxy=$NO_PROXY

LABEL base_image="nvidia/cuda:12.9.1-cudnn-runtime-ubuntu24.04"

#ADD Containerfile /opt/
COPY bin /opt/bin

# 2. Apt install
RUN /opt/bin/apt_install.sh \
    tzdata locales build-essential ninja-build \
    python3 python3-venv python3-pip python3-dev && \
  locale-gen en_US.UTF-8 && \
  update-locale LANG=en_US.UTF-8
# /opt/bin/apt_install.sh gosu libgl1 libglib2.0-0t64 fonts-noto-cjk
# locale-gen zh_CN.UTF-8

ENV LANG=en_US.UTF-8

RUN /opt/bin/apt_install.sh zip unzip vim ffmpeg jq git git-lfs wget curl && \
  wget -qO /usr/local/bin/yq \
    https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64 && \
  chmod a+x /usr/local/bin/yq

RUN userdel -r ubuntu || true && \
  groupadd -g 1000 appuser && \
  useradd -s /bin/bash -m -u 1000 -g 1000 appuser

USER appuser
WORKDIR /home/appuser

# 3. Setup
# RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple
RUN python3 -m venv /home/appuser/venv
ENV PATH=/home/appuser/venv/bin:$PATH
RUN pip install --no-cache-dir --upgrade pip wheel setuptools uv

# 4. Install ComfyUI
RUN pip install --no-cache-dir \
    "torch>=2.9,<3.0" "torchaudio>=2.9,<3.0" "torchvision>=0.24,<0.25" \
    --index-url https://download.pytorch.org/whl/cu128

RUN pip install --no-cache-dir \
  PySocks "requests[socks]" "httpx[socks]" "huggingface_hub[cli]" \
  numpy pillow numba opencv-python-headless sageattention onnx torchao

RUN git clone --branch master --depth 1 --single-branch \
    https://github.com/comfyanonymous/ComfyUI.git ComfyUI && \
  pip install --no-cache-dir -r ComfyUI/requirements.txt

RUN mv venv/lib/python3.12/site-packages venv/lib/python3.12/dist-packages && \
  mkdir -p workspace && \
  cp -r ComfyUI/custom_nodes ComfyUI/models workspace/

# 5. Reset http_proxy and https_proxy
ENV https_proxy="" \
  http_proxy="" \
  CONTAINER_INIT_COMMAND="" \
  TORCH_HOME=/home/appuser/workspace/models/torch \
  HF_HUB_CACHE=/home/appuser/workspace/models/huggingface/hub

# 6. Set VOLUME, HEALTHCHECK, EXPOSE and CMD
WORKDIR /home/appuser/workspace

VOLUME /home/appuser/workspace
VOLUME /home/appuser/venv/lib/python3.12/site-packages
# models, custom_nodes, user, input, output, temp

EXPOSE 8188

#HEALTHCHECK --start-period=30s --interval=20s --timeout=1s --retries=3 CMD \
#  curl --fail --silent -I http://localhost:8188/system_stats &> /dev/null
#  # -w "%{http_code}"

ENTRYPOINT ["/opt/bin/entrypoint.sh"]

CMD ["python3", "/home/appuser/ComfyUI/main.py", "--base-directory=/home/appuser/workspace", "--enable-cors-header", "--listen=0.0.0.0", "--port=8188"]
