#FROM nvidia/cuda:12.9.1-cudnn-devel-ubuntu24.04
FROM nvidia/cuda:12.9.1-cudnn-runtime-ubuntu24.04

# 1. Accept proxy settings as build arguments
ARG HTTP_PROXY
ARG HTTPS_PROXY

LABEL base_image=nvidia/cuda:12.9.1-cudnn-runtime-ubuntu24.04

ENV http_proxy=$HTTP_PROXY \
  https_proxy=$HTTPS_PROXY

ADD Containerfile /opt/
COPY bin /opt/bin

# 2. Apt install
RUN /opt/bin/apt_install.sh \
  tzdata locales fonts-noto-cjk ninja-build \
  vim ffmpeg jq git git-lfs wget curl \
  python3 python3-venv python3-pip python3-dev
# gosu build-essential

RUN wget -qO /usr/local/bin/yq \
  https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64 && \
  chmod a+x /usr/local/bin/yq

RUN locale-gen en_US.UTF-8 zh_CN.UTF-8 && \
  update-locale LANG=en_US.UTF-8 && \
  userdel -r ubuntu || true && \
  groupadd -g 1000 appuser && \
  useradd -s /bin/bash -m -u 1000 -g 1000 appuser

ENV PATH=/home/appuser/venv/bin:$PATH \
  LANG=en_US.UTF-8

USER appuser

# 3. Setup
# RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple
RUN python3 -m venv /home/appuser/venv && \
  pip install --no-cache-dir --upgrade pip wheel setuptools \
    uv PySocks huggingface_hub[cli] datasets

# 4. Install ComfyUI
RUN pip install --no-cache-dir \
    "torch>=2.9,<3.0" "torchaudio>=2.9,<3.0" "torchvision>=0.24,<0.25" \
    --index-url https://download.pytorch.org/whl/cu128 && \
  pip install --no-cache-dir --upgrade xformers sageattention onnx

RUN git clone --branch master --depth 1 --single-branch \
    https://github.com/comfyanonymous/ComfyUI.git /home/appuser/ComfyUI && \
  pip install --no-cache-dir -r /home/appuser/ComfyUI/requirements.txt

WORKDIR /home/appuser/ComfyUI

#git clone --branch main --depth 1 --single-branch \
#  https://github.com/crystian/ComfyUI-Crystools.git custom_nodes/ComfyUI-Crystools
#pip install --no-cache-dir -r custom_nodes/ComfyUI-Crystools/requirements.txt

#git clone --branch main --depth 1 --single-branch \
#  https://github.com/Comfy-Org/ComfyUI-Manager.git custom_nodes/ComfyUI-Manager
#pip install --no-cache-dir -r custom_nodes/ComfyUI-Manager/requirements.txt
#mv custom_nodes/ComfyUI-Manager custom_nodes/ComfyUI-Manager.disabled

RUN mv /home/appuser/venv/lib/python3.12/site-packages \
    /home/appuser/venv/lib/python3.12/dist-packages && \
  mkdir -p /home/appuser/site-packages && \
  ln -s /home/appuser/site-packages /home/appuser/venv/lib/python3.12/

# 5. Reset http_proxy and https_proxy
ENV http_proxy="" \
  https_proxy="" \
  TORCH_HOME=/home/appuser/ComfyUI/models/torch \
  HF_HUB_CACHE=/home/appuser/ComfyUI/models/huggingface/hub

# 6. Set VOLUME, HEALTHCHECK, EXPOSE and CMD
VOLUME /home/appuser/site-packages
VOLUME /home/appuser/ComfyUI/models
VOLUME /home/appuser/ComfyUI/custom_nodes
VOLUME /home/appuser/ComfyUI/user
VOLUME /home/appuser/ComfyUI/input
VOLUME /home/appuser/ComfyUI/output

EXPOSE 8188

#HEALTHCHECK --start-period=30s --interval=20s --timeout=1s --retries=3 CMD \
#  curl --fail --silent -I http://localhost:8188/system_stats &> /dev/null
#  # -w "%{http_code}"

ENTRYPOINT []
CMD ["python3", "main.py", "--enable-cors-header", "--listen=0.0.0.0", "--port=8188"]
# --disable-smart-memory
# --disable-manager-auto-update
# --no-manager
# --lowvram
