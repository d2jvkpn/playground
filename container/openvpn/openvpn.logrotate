# path: /etc/logrotate.d/openvpn.logrotate
# command: logrotate -f /etc/logrotate.d/openvpn.logrotate

/etc/openvpn/openvpn.log {
    rotate 12
    monthly
    # daily
    # size 100M
    dateext
    dateformat -%Y%m%dS%s
    missingok
    compress
    delaycompress
    notifempty
    copytruncate
    # create 0640 root root
    # postrotate
    # endscript
}
